{
  "name": "hermenautas",
  "description": "Web Oficial de Hermenautas S.L.",
  "version": "0.2.3",
  "private": true,
  "homepage": "https://hermenautas.com/",
  "license": "propietary",
  "contributors": [
    {
      "name": "Pedro M. Cruz",
      "email": "mcrz@hermenautas.es"
    }
  ],
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint --no-cache",
    "test": "node",
    "prettier": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "prepare": "husky install",
    "release": "release-it"
  },
  "dependencies": {
    "@mdi/js": "^7.4.47",
    "@mdi/react": "^1.6.1",
    "@reduxjs/toolkit": "^2.2.5",
    "@vercel/analytics": "^1.3.1",
    "@vercel/speed-insights": "^1.0.12",
    "base64url": "^3.0.1",
    "bootstrap": "^5.3.3",
    "cookies-next": "^4.2.1",
    "html-react-parser": "^5.1.10",
    "husky": "^9.0.11",
    "js-cookie": "^3.0.5",
    "lint-staged": "^15.2.7",
    "next": "14.2.3",
    "next-intl": "^3.15.2",
    "next-seo": "^6.5.0",
    "nodemailer": "^6.9.14",
    "paseto": "^3.1.2",
    "prop-types": "^15.8.1",
    "react": "^18",
    "react-bootstrap": "^2.10.2",
    "react-bootstrap-icons": "^1.11.4",
    "react-dom": "^18",
    "react-loading-skeleton": "^3.4.0",
    "react-modal-video": "^2.0.2",
    "react-password-strength-bar": "^0.4.1",
    "react-redux": "^9.1.2",
    "react-responsive": "^10.0.0",
    "sass": "^1.77.5",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "^14.2.5",
    "@release-it/conventional-changelog": "^8.0.1",
    "eslint": "^8.37.0",
    "eslint-plugin-react": "^7.34.4",
    "postcss": "^8",
    "prettier": "3.3.3",
    "release-it": "^17.6.0",
    "tailwindcss": "^3.4.1"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true,
      "preRelease": true,
      "tokenRef": "NEXT_PUBLIC_GITHUB_TOKEN"
    },
    "npm": {
      "publish": false
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "preset": {
          "name": "conventionalcommits",
          "type": [
            {
              "type": "feat",
              "section": "Nuevas Funcionalidades"
            },
            {
              "type": "fix",
              "section": "Corrección Bugs"
            },
            {
              "type": "perf",
              "section": "Optimización"
            },
            {
              "type": "docs",
              "section": "Nueva Documentación"
            }
          ]
        }
      }
    }
  }
}
